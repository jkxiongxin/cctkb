    			<param name="root">jsonObj</param>
    		</result>
    	</action>
    	<action name="weekly" class="cct.action.viewWeeklyReportAction">
    	    	 <result type="json" name="success">
    	    	 <param name="root">jsonObj</param>
    	    	 </result>
      	</action>
